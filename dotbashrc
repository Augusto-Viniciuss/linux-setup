# create alisases
alias ra='ranger'

# set editor and shell
export EDITOR=vim
export SHELL=/bin/bash

export TERM="xterm-256color"                                                                          

# allows killing tmux by exiting the window                                                           
alias tmuxn='tmux new-session -s $$'                                                                  
_trap_exit() { tmux kill-session -t $$; }                                                             
trap _trap_exit EXIT                                                                                  

